<Window x:Class="WPFAerodrom.Forme.FormTipKarte"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFAerodrom.Forme"
        mc:Ignorable="d"
        Title="FormTipKarte" Height="220" Width="300">
    <Grid>

        <Label Content="Klasa:" HorizontalAlignment="Left" Margin="40,40,0,0" VerticalAlignment="Top" />
        <TextBox x:Name="txtKlasa" HorizontalAlignment="Left" Margin="100,40,0,0" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="32,120,0,0" VerticalAlignment="Top" Width="75" Click="btnOK_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="177,120,0,0" VerticalAlignment="Top" Width="75" Click="btnCancel_Click"/>



    </Grid>
</Window>
